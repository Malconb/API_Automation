pipeline {
    agent any
    parameters {
        text description: 'If this field is set, pytest will run for filled tags e.g. "@acceptance"', name: 'TAG'
    }

    stages {
        stage('python version') {
            steps {
              sh 'python3 --version'
            }
        }
        stage('Run Python Scripts') {
            steps {
                withPythonEnv('python3') {
                    sh 'pip install -r requirements.txt'
                    sh 'python3 -m pytest trello_api/ ${params.TAG} -v --alluredir reports/allure/'
                }
            }
        }
        stage('reports') {
            steps {
                script {
                    allure includeProperties: false,
                        jdk:'',
                        properties: [],
                        reportBuildPolicy: 'ALWAYS',
                        results: [[path: 'reports/allure/']]

                 }
            }
        }
    }
}